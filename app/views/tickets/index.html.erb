# app/views/tickets/index.html.erb

<h1>Tickets</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Subject</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Created at</th>
      <th>Updated at</th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.id %></td>
        <td><%= ticket.subject %></td>
        <td><%= ticket.status %></td>
        <td><%= ticket.priority %></td>
        <td><%= ticket.created_at %></td>
        <td><%= ticket.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

